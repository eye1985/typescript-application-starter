{
  "name": "ts-starter-kit",
  "version": "1.2.0",
  "description": "A starter pack for TS applications",
  "main": "app.js",
  "author": "Erik",
  "license": "MIT",
  "browserslist": [
    "last 2 versions"
  ],
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack serve --hot --progress",
    "dev": "npm run clean && cross-env NODE_ENV=development webpack -d",
    "build": "npm run clean && npm run build:es5 && npm run build:es6",
    "build:es5": "cross-env NODE_ENV=production webpack",
    "build:es6": "cross-env NODE_ENV=production webpack --env es6",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "@types/html-webpack-plugin": "^3.2.6",
    "autoprefixer": "^10.4.0",
    "core-js": "^3.19.2",
    "cross-env": "^7.0.3",
    "css-loader": "^6.5.1",
    "cssnano": "^5.0.12",
    "html-webpack-plugin": "^5.0.0",
    "mini-css-extract-plugin": "^2.4.5",
    "node-sass": "^6.0.1",
    "postcss": "^8.2.4",
    "postcss-loader": "^6.2.1",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.1",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.2.6",
    "typescript": "^4.5.2",
    "webpack": "^5.64.4",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.6.0"
  }
}
